    apt-get install -y wget && \
    wget http://download.redis.io/releases/redis-5.0.4.tar.gz && \
    tar -xzf redis-5.0.4.tar.gz && \
    cd redis-5.0.4 && \
    make redis-cli && \
    cp src/redis-cli /usr/local/bin/ && \
    rm -fr redis-5.0.4 redis-5.0.4.tar.gz && \
    apt-get remove -y wget && \
